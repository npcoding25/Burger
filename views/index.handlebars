<div class="row">
  <center>
    <!-- Left side (ready to eat) -->
    <div class="col-md-6">
      <h4>Ready to eat!</h4>
      <div>

        <!-- Ready to eat burgers here -->
        {{#each burgers}}
        {{#unless devoured}}
        <form>
          <div class="input-group">
            <li class="form-control">{{id}}. {{burger_name}}</li>
            <span class="input-group-btn">
              <button id="{{id}}" class="btn btn-success eatBurger" type="button">Devour It!</button>
            </span>
          </div>
        </form>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">

        <!-- Eaten burgers here -->
        {{#each burgers}}
        {{#if devoured}}
        <div class="input-group">
          <li class="form-control">{{id}}. {{burger_name}}</li>
          <span class="input-group-btn">
            <button class="btn btn-info" type="button">Delete</button>
          </span>
        </div>
        {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>